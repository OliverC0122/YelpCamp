
<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">
        Edit Campground
    </h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" 
            novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title"> Title </label>
                <input class="form-control" type="text" id="title"
                 value="<%=campground.title %>" required
                name="campground[title]">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        
            <div class="mb-3">
                <label class="form-label" for="location"> Location </label>
                <input class="form-control" type="text" id="location"
                value="<%=campground.location %>" required
                name="campground[location]">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="formFileMultiple" class="form-label"> Campground Image(s)</label>
                <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price"> Campground Price </label>
                <div class="input-group">
                    <div class="input-group-prepend">
                    <span class="input-group-text" id="price-label">$</span>
                    </div>
                    <input id="price" type="text" class="form-control" 
                        placeholder="0.00" aria-label="Username" 
                        aria-describedby="price-label"  required
                        value="<%= campground.price %>"
                        name="campground[price]">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label" for="description"> Title </label>
                <textarea class="form-control" type="text" 
                id="description" required
                name="campground[description]"><%= campground.description %>
                </textarea> 
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">  
                <% campground.images.forEach((img,i) => { %>
                <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check-line">
                    <input type="checkbox" id="img-<%= i %>"
                     name="deleteImages[]" value="<%=img.filename %>">
                    <label for="img-<%=i%>">Delete?</label>
                </div>
                <% }); %>
            </div>

            <div class="my-3">
                <button class="btn btn-info">Update Campground</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Back to Camground</a>
         
    </div>
</div>